
@{
    ViewData["Title"] = "CountryAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CountryModel

<div class="container">
    <h2>@TempData["Country_Insert_Msg"]</h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="Country">

            @Html.HiddenFor(x => x.CountryID)

            <div class="form-group">
                <label>Country Name</label>
                <input type="text" class="form-control" asp-for="CountryName" placeholder="Enter Country Name Here." />
            </div>

            <div class="form-group">
                <label>Country Code</label>
                <input type="text" class="form-control" asp-for="CountryCode" placeholder="Enter Country Code Here." />
            </div>

            @Html.HiddenFor(x => x.CreationDate)
            @Html.HiddenFor(x => x.ModificationDate)

            <br />

            <div class="form-group">
                <div class="row">
                    <div class="col-1">
                        <button type="submit" class="btn btn-outline-success" asp-action="Save">Save</button>
                    </div>
                    <div class="col-1">
                        <button type="submit" class="btn btn-outline-danger" asp-action="Index">Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    
</div>
