
@{
    ViewData["Title"] = "ContactCategoryAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ContactCategoryModel

<div class="container">
    <h2>@TempData["ContactCategory_Insert_Msg"]</h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="ContactCategory">

            @Html.HiddenFor(x => x.ContactCategoryID)

            <div class="form-group">
                <label>Category</label>
                <input type="text" class="form-control" asp-for="ContactCategory" placeholder="Enter ContactCategory Name Here." />
            </div>

            @Html.HiddenFor(x => x.CreationDate)
            @Html.HiddenFor(x => x.ModificationDate)

            <br />

            <div class="form-group">
                <div class="row">
                    <div class="col-1">
                        <button type="submit" class="btn btn-outline-success" asp-action="Save">Save</button>
                    </div>
                    <div class="col-1">
                        <button type="submit" class="btn btn-outline-danger" asp-action="Index">Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>


