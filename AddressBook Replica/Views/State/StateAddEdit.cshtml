@{
    ViewData["Title"] = "StateAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model StateModel

<h2>@TempData["State_Insert_Msg"]</h2>

<div class="container">
    <form method="post" class="form" asp-controller="State">

        @Html.HiddenFor(x => x.StateID)

        <div class="form-group">
            <label class="form-label">CountryName</label>
            <select class="form-control" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
                <option value="">Select Country</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-label">StateName</label>
            <input type="text" class="form-control" asp-for="StateName" placeholder="Enter State Name Here." />
        </div>

        @Html.HiddenFor(x => x.CreationDate)
        @Html.HiddenFor(x => x.ModificationDate)

        <div class="row">
            <div class="col-1">
                <button type="submit" class="btn btn-outline-success" asp-action="Save">Save</button>
            </div>
            <div class="col-1">
                <button type="submit" class="btn btn-outline-danger" asp-action="Index">Cancel</button>
            </div>
        </div>

    </form>
</div>